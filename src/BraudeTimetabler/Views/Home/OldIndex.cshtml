@model HomePageViewModel
     
@{
    ViewBag.Title = "Braude Timetabler";
}                                               

<div>    
    <div style="float: right; width: 50%;">
        <h2>All Courses</h2>
        <table>
            @foreach (var course in Model.AllCourses)
            {
                <tr>
                    <td>
                        <div style="margin-bottom: 5px;">
                            <a class="btn btn-primary" asp-action="CourseDetails" asp-route-courseId="@course.Id">פרטים</a>
                            @course.Name
                        </div>
                    </td>
                    <td>@course.Id</td>
                </tr>
            }
        </table>
    </div>
    
    <div style="float: left; width: 50%;">
        <h2>Selected Courses</h2>
        <table id="slctdTbl">
            <thead>
            <tr>
                <th class="tbl-header text-center">Course Id</th>
                <th class="tbl-header text-center">Course Name</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
