<style>

     html, body {    
         height: 100%;
         width: 100%;
         /*overflow: hidden;*/
         /*margin: 0;*/
     }
    

    .vertical-align {
        position: relative;
        top: 50%;
    }
    /*
 * Row with equal height columns
 * --------------------------------------------------
 */
    .row-eq-height {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display:         flex;
    }


    .max-height {
        height: 100%;
    }
